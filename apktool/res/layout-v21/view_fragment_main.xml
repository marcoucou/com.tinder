        <ImageButton android:id="@id/view_camera" android:background="@null" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/mymoments_camera" android:layout_centerInParent="true" android:contentDescription="@string/view_camera" android:elevation="1.0dip" />
