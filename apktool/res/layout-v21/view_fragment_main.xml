        <View android:id="@id/view_menu_bg" android:background="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignRight="@id/main_menu_divider" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:layout_alignParentBottom="true" />
        <View android:id="@id/main_menu_divider" android:background="@color/gray_very_light" android:layout_width="@dimen/view_card_divider_width" android:layout_height="wrap_content" android:layout_margin="@dimen/margin_med" android:layout_toRightOf="@id/btn_main_menu" />
