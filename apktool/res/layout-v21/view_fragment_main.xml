        <ImageButton android:id="@id/btn_search_matches" android:background="@null" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="fill_parent" android:layout_marginTop="@dimen/ab_top_margin" android:layout_marginRight="@dimen/margin_med" android:src="@drawable/selector_search_icon" android:layout_alignParentRight="true" android:layout_centerVertical="true" />
